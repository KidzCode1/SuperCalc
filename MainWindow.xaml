<Window x:Class="SuperCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperCalc"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800" FontSize="38">
    <StackPanel Orientation="Vertical" >
        <TextBox x:Name="tbxEquation" TextChanged="tbxEquation_TextChanged" >

        </TextBox>
        <Label x:Name="lblAnswer" Content="Enter an equation above!"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 20, 0, 0"/>
        <Button x:Name="btnCopyAnswer" MaxWidth="370" Click="btnCopyAnswer_Click" >
            Copy Answer
        </Button>
        <Button x:Name="btnCreateTestCase" MaxWidth="370" Margin="0, 20, 0, 0" Click="btnCreateTestCase_Click">
        	Create Test Case.
        </Button>
    </StackPanel>
</Window>
